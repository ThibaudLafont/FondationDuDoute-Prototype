{% extends 'base.html.twig' %}

{% block main_title %}
    Sites des artistes
{% endblock %}
{% block sub_main_title %}
    12 sites
{% endblock %}

{% block body %}
<!-- Posts -->
<div class="ui container">
    <table class="ui compact celled table">
        <thead>
            <tr>
                <th class="collapsing">Nom de l'artiste</th>
                <th class="center aligned">URL</th>
                <th class="center aligned">Suppr.</th>
                <th class="center aligned">Modif.</th>
            </tr>
        </thead>

        <tbody>
        {% for i in 1..13 %}
            <tr>
                <td>
                    Nom de l'artiste
                </td>
                <td>
                    http://example.com
                </td>
                <td class="center aligned collapsing">
                    <a href="#" class="ui red icon button"><i class="ui icon trash"></i></a>
                </td>
                <td class="center aligned collapsing">
                    <a href="#" class="ui green icon button"><i class="ui icon edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

{% block javascripts %}
    <script>
        /* Post cards dimmer */
        $('.posts.cards .fluid.image').dimmer({
            on: 'hover'
        });
    </script>
{% endblock %}