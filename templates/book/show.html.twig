{% extends 'base.html.twig' %}

{% block main_title %}
    Nom du livre
{% endblock %}
{% block sub_main_title %}
    255 pages
{% endblock %}

{% block body %}
    <div class="ui container">
        <div class="ui center aligned vertical segments">
            <div class="ui center aligned segment">
                <div id="flipbook" class="sheet">
                    <div class="hard"> Exemple de titre </div>
                    <div class="hard"></div>
                    <div class="hard" style="background-image:url('/img/1.jpg');"></div>
                    <div class="hard" style="background-image:url('/img/2.jpg');"></div>
                    <div class="hard" style="background-image:url('/img/3.jpg');"></div>
                    <div class="hard" style="background-image:url('/img/4.jpg');"></div>
                    <div class="hard"></div>
                    <div class="hard"></div>
                </div>
            </div>
            <div class="ui segment">
                <div id="left-button" class="ui primary button"><-</div>
                <div id="right-button" class="ui primary button">-></div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/js/turn.js"></script>
    <script type="text/javascript">
        // Init flipbook
        $("#flipbook").turn({
            width: '100%',
            height: 450
        });

        // Disable animations
        $('#flipbook').turn('disable', true);

        // Previous button
        $('#left-button').click(function(){
            $('#flipbook').turn('previous');
        });
        // Next button
        $('#right-button').click(function(){
            $('#flipbook').turn('next');
        });

        // Keyboard control
        $(window).bind('keydown', function(e){

            // Left key
            if (e.keyCode==37)
                $('#flipbook').turn('previous');
            // Right key
            else if (e.keyCode==39)
                $('#flipbook').turn('next');

        });
    </script>
{% endblock %}